@using System.Transactions
@model IList<WebApplication.Models.Room>
<turbo-frame id="rooms">
    
    <form method="post">
        <div class="input-group col-4 mb-4">
            <input type="text" class="form-control" name="name" placeholder="Room Name" aria-label="Room Name" aria-describedby="button-submit">
            <input class="btn btn-primary" type="submit" id="button-submit" value="Create"/>
        </div>
    </form>
    
    @foreach (var room in Model)
    {
        <div class="row mb-2">
            <div class="col-2">
                <a data-turbo-frame="_top" asp-page="Room" asp-route-id="@room.Id">@room.Name</a>
            </div>
            <div class="col-1">
                <form method="delete" asp-route-id="@room.Id">
                    <input class="btn btn-outline-secondary" type="submit" value="Delete"/>
                </form>
            </div>
        </div>
    }
</turbo-frame>